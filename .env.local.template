# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# Get these values from your Supabase project dashboard at https://supabase.com/dashboard

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Your Supabase publishable API key (replaces anon key - safe for public use)
# Format: sb_publishable_...
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_publishable_key_here
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key_here

# Optional: Secret key (replaces service_role key - keep this secret, used for admin operations)
# Format: sb_secret_...
SUPABASE_SERVICE_ROLE_KEY=your_supabase_secret_key_here
SUPABASE_SECRET_KEY=your_supabase_secret_key_here

# Optional: JWT Secret (for token verification)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Application Configuration
# Base URL for your application (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Enable debug mode for development
NEXT_PUBLIC_DEBUG=false

# Dev bypass flag - allows skipping auth in development when on localhost
# Set to true for local development convenience, false for production
NEXT_PUBLIC_DEV_BYPASS=false

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_SECRET=your_api_secret_here
TWILIO_PHONE_NUMBER=+1234567890

# For webhook verification (optional but recommended)
TWILIO_WEBHOOK_SECRET=your_webhook_secret
